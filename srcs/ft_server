server {
	listen 80;
	listen [::]:80;
	server_name localhost;
	return 301 https://$host$request_uri;
}

server {
	listen 443;
	listen [::]:443;
	server_name localhost;
	ssl on;
	ssl_certificate		/etc/ssl/certs/localhost.crt;
	ssl_certificate_key	/etc/ssl/certs/localhost.key;
	root /var/www/ft_server/html;
	index index.html index.htm;
}
